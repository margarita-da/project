.section__recommendations
    padding-top 40px

.tags-wr
    padding 40px 0 30px 0
    border-bottom 1px solid #F3F6F8
.tags__link
    display inline-block
    margin-right 15px
    margin-bottom 10px
    font(RM, #B7B7B7)
    padding 5px 10px
    border-radius 3px
    tran(all, .8s)
    &:hover
        background-color red
        color white
        tran(all, .8s)
        
.tags__link-active
    background-color red
    color white
    tran(all, .3s)
.tags__content__item
    display flex
    justify-content space-around
    border-top 1px solid #F3F6F8
    padding 25px 0
    &:first-child
        border-top none
    +adapt(992px)
        flex-wrap wrap
 
.tags__content__date,
.tags__content__wishlist
    width 150px
    +adapt(992px)
        width 50%
        order 3
.tags__content__date
    +adapt(992px)
        order 1
.tags__content__wishlist
    +adapt(992px)
        order 2
.tags__content__date-txt
    font(RB, dark, 20px)
    padding  0 10px 0 
    +adapt(480px)
        font-size 18px
.tags__content__info
    width calc(100% - 300px)
    +adapt(992px)
        margin-top 15px
        width 100%
        order 3
.tags__content__info__hall
    font(RB, green)
.tags__content__info__section
    margin-top 15px
    font(RB, dark, 24px)
    +adapt(992px)
        font-size 20px
.tags__content__info__title
    font(RR, dark, 24px)
    +adapt(992px)
        font-size 20px
.tags__content__info__descr
    width 80%
    font(RR, #707070)
    margin-top 15px
.tags__content__wishlist
    display flex
    justify-content flex-end
.tags__content__buttons
    flex()
    margin-top 40px
    +adapt(768px)
        flex-direction column
.tags__content__btn 
    width 300px
    height 50px
    margin-right 40px
    +adapt(768px)
        margin-right 0
        margin-bottom 30px
.tags__content__link
    width 300px
    height 50px
    flex()
.wishlist-active
    .recommendations__second__star-img
        use
            fill red

        