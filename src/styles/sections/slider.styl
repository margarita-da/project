.container__advertising
    display flex
    align-items center
    justify-content center
    flex-direction column
    margin-top 15px

.slider-wrapper
    width 100%
    display flex
    justify-content center
    .slider__list
        width 770px
        +adapt(1400px)
            width 700px
        +adapt(768px)
            width 100%!important
    .swiper-button-wr
        width 90px
        height 50px
        background-color rgba(128, 128, 128, 0.5)
        +adapt(450px)
            width 70px
            height 40px
.slider__img
    display: block;
    max-width: 100%;
    height:auto;

.advertising-wrap
    text-align center
    margin-top 50px
    width 770px
    +adapt(1400px)
        width 700px
        margin-top 30px
    +adapt(768px)
        width 100%!important

.advertising-title
    padding 0 30px
    line-height 1
    .h2__title
        color green
        font-size 32px
        +adapt(770px)
            font-size 24px

.advertising__description
    margin-top 20px
.advertising__description-text
    font(RR, dark, 16px)
    text-align left
.advertising__button
    display flex
    justify-content center
    align-items center
    width 300px
    height 56px
    margin-top 40px
    +adapt(1400px)
        margin-top 30px

.swiper-button-wr
    position absolute
    bottom 0
    right 0
    border 1px solid dark
    width 120px
    height 60px
    z-index 10
.swiper-button-next,
.swiper-button-prev
    width 50%
    &:after
        font-size 25px
        color dark
    &:focus
        border none 
        outline none
.calendar
    text-align center
    margin 40px 0 !important
    line-height 45px