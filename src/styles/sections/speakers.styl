.speackers-container
    .news-inside__back
        +adapt(780px)
            margin-bottom 20px


.dbd20-section
    color #464646
    // &_blue
    //     background-color #00054D
    
    &__in
        max-width: 1140px;
        margin-right: auto;
        margin-left: auto;
        padding-right: 15px;
        padding-left: 15px;
        padding-top 10px
        padding-bottom 40px
        +adaptmin(992px)
            padding-bottom 40px
        &_full-width
            max-width: 100%
            padding-right 0
            padding-left 0
        &_cta
            padding-top 20px
            padding-bottom 20px
            text-align center
    &_pb0
    &__title
        margin-bottom 26px
        color #00054D
        font-size 26px
        font-weight 700
        font-family 'Rubik', sans-serif
        text-align center
        +adaptmin(768px)
            margin-bottom 40px
            font-size 32px
        +adaptmin(1200px)
            margin-bottom 65px
            font-size 48px
        .dbd20-section_blue &
            color inherit


.dbd20-speakers
    +adaptmin(576px)
        display flex
        flex-wrap wrap
        margin-bottom 70px
    &__item
        display none
        opacity 0
        +adaptmin(576px)
            min-width 50%
            flex-shrink 0
            flex-grow 0
            flex-basis 50%
            transition opacity .25s ease-in
        +adaptmin(992px)
            min-width 33.333%
            flex-basis 33.333%
        +adaptmin(1200px)
            min-width 25%
            flex-basis 25%
        +adaptmin(1600px)
            min-width 20%
            flex-basis 20%
        &_active
            display block
        &_visible
            opacity 1
    &__card
        overflow hidden
        position relative
        background linear-gradient(to right, rgba(green, 0.9) 0%, rgba(red, 0.8) 100%)
        &_program-notfull
            border 1px solid #FF6A00
            background #00054D
    &__photo
        transition opacity 0.5s ease, transform 0.5s ease
        transform scale(1.08) translate3d(-10px, 0, 0)
        filter grayscale(100%)
        :hover > &
            transform scale(1.08)
            opacity .2
    &__who
        position absolute
        top 0
        left 0
        display flex
        align-items flex-start
        justify-content flex-end
        flex-wrap wrap
        flex-direction column
        width 100%
        height 100%
        padding 20px
        transition background-color 0.5s ease
        background-color rgba(#2B2B2B, 0.3)
        background-image url(../images/speakers/tap-white.svg)
        background-size 24px auto
        background-position right 20px bottom 20px
        background-repeat no-repeat
        +adaptmin(1200px)
            background-image none
        :hover > &
            background-color transparent
    &__name,
    &__position
        color white
        padding-right 30px
        +adaptmin(1200px)
            padding-right 0
    
    &__name
        margin-bottom 10px
        font-size 18px
        font-weight 700
        font-family 'Rubik', sans-serif
    &__company
        font-size 16px
        font-weight 900
        font-family 'SF UI Text', sans-serif
        padding-right 30px
        color red
        +adaptmin(1200px)
            padding-right 0
        :hover > * > &
            color #fff
    &__position
        display none
        margin-top 15px
        font-size 16px
        font-weight 500
        font-family 'SF UI Text', sans-serif
        :hover > * > &
            display block

.dbd20-speakers-load-more
    margin-top 40px
    flex()
    +adaptmin(576px)
        margin-top 70px


.dbd20-btn
    display inline-flex
    align-items center
    justify-content center
    min-width 285px
    height 50px
    border 4px solid #FF6A00
    background-color #FF6A00
    color #fff
    font-size 14px
    font-weight 700
    font-family 'Rubik', sans-serif
    text-align center
    cursor pointer
    transition background-color 0.25s ease, color 0.25s ease
    text-decoration none !important
    +adaptmin(576px)
        font-size 16px
        height 60px
    &:hover
        background-color transparent
        color #FF6A00
    &_green-bordered
        border 1px solid #00EC9A
        background-color #fff
        color #00054D
        &:hover
            background-color #00EC9A
            color #00054D
    &_orange-bordered
        border 1px solid #FF6A00
        background-color #fff
        color #00054D
        &:hover
            background-color #fff
            color #00054D
    &_block
        display block
        min-width 1px
        width 100%

.dbd20-share
    padding-top 60px
    text-align center
    &__btns
        .ya-share2__container_size_m
            .ya-share2__item
                margin-right 0

                & + .ya-share2__item
                    margin-left 10px

                    +adaptmin(576px)
                        margin-left 20px
            .ya-share2__icon
                width 40px
                height 40px
                +adaptmin(576px)
                    width 52px
                    height 52px
            .ya-share2__counter
                border-radius 0 2px 2px 0
                background #FFF
                color #3A3C4D
                font-size 18px
                line-height 40px

                +adaptmin(576px)
                    line-height 52px
