            label.label
                .form__txt
                input(type="text" class="input"   name="firstname" placeholder="Имя").reg__label-firstname
            label.label
                .form__txt
                input(type="text" class="input"  name="lastname" placeholder="Фамилия").reg__label-lastname
            label.label(for="phone")
                .form__txt
                input(type="tel" class="input tel" name="phone" placeholder="+7(9__)___-____").reg__label-phone
            label.label
                .form__txt
                input(type="text" class="input" name="company" placeholder="Название компании").reg__label-company
            label.label
                .form__txt
                input(type="text" class="input" name="position" placeholder="Должность").reg__label-position
            label.label
                .form__txt
                input(type="email" class="input" name="email" placeholder="E-mail").reg__label-email
            label.label
                .form__txt
                input(type="password" class="input" name="pass" placeholder="Пароль").reg__label-pass
            label.label.label-confirm
                input(type="checkbox" name="consent" placeholder="")
