        .popup-reg__content-info__shrt-txt Авторизация
        form.form.form-auth
            label.label
                .form__txt
                input(type="email" name="authEmail" class="input" placeholder="E-mail")
                
            label.label
                .form__txt
                input(type="password" name="authPassword" class="input" placeholder="Пароль")
                
            button(data-btn="auth").button.button__dark.popup-reg-info__btn Войти
                span
        a(href="#" data-next="#form-forgot").form-next.forgot__link Забыли пароль?
    .popup-forgot#form-forgot
        .popup-reg__content-info__shrt-txt Забыли пароль?
        form.form.form-forgot
            label.label
                .form__txt
                input(type="email" name="email" class="input" placeholder="E-mail")
                
            button(data-btn="forgot").button.button__dark.popup-reg-info__btn Отправить
                span
    .popup-reg#form-reg
        .popup-reg__content-info__shrt-txt Регистрация
